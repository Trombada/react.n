import java.util.Scanner;

public class QuizApp {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        String[] perguntas = {
            "Qual o menor país do mundo?",
            "Qual o maior país do mundo?"
        };

        String[][] opcoes = {
            {"Vaticano", "Brasil", "Rússia", "Itália"},
            {"EUA", "China", "Rússia", "Índia"}
        };

        int[] respostasCorretas = {0, 2}; // Índices das respostas corretas

        int pontuacao = 0;

        System.out.println("=== Bem-vindo ao PensaAi! ===");
        System.out.print("Digite seu nome: ");
        String nome = scanner.nextLine();
        System.out.println("Olá, " + nome + "! Vamos começar o quiz.\n");

        for (int i = 0; i < perguntas.length; i++) {
            System.out.println("Pergunta " + (i + 1) + ": " + perguntas[i]);
            for (int j = 0; j < opcoes[i].length; j++) {
                System.out.println((j + 1) + ". " + opcoes[i][j]);
            }

            System.out.print("Sua resposta (1-4): ");
            int respostaUsuario = scanner.nextInt();

            if (respostaUsuario - 1 == respostasCorretas[i]) {
                System.out.println("✅ Resposta correta!\n");
                pontuacao++;
            } else {
                System.out.println("❌ Resposta incorreta! A resposta correta era: " + opcoes[i][respostasCorretas[i]] + "\n");
            }
        }

        System.out.println("Quiz finalizado! Sua pontuação: " + pontuacao + " de " + perguntas.length);
        scanner.close();
    }
}
